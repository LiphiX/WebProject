@using PostOffice.ViewModels
@model LoginViewModel

<div class="d-flex justify-content-center align-items-center">
	
	<form asp-controller="UserAccount" asp-action="Authorization" method="post" class="card-form w-50 p-5">
		<div class="d-flex flex-column justify-content-center align-content-center">
			<div class="mb-3">
				<label asp-for="Login" class="form-label">Логин:</label>
				<input asp-for="Login" class="form-control" type="text" />
				<span asp-validation-for="Login" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Password" class="form-label">Пароль:</label>
				<input asp-for="Password" class="form-control" type="password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="ConfirmPassword" class="form-label">Подтвердите пароль:</label>
				<input asp-for="ConfirmPassword" class="form-control" type="password" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
		</div>
		<button type="submit" class="btn btn-primary">Сохранить</button>
	</form>
</div>