@model Publication

<div class="card bg-transparent ms-2 me-5 mb-3 pt-4">
    <a class="nav-link card-image" role="button" asp-controller="Publications" asp-action="Subscribe" asp-route-id="@Model.Id">
        <picture class="card-img-top bg-dark card-image">
            @if (Model.ImageAddress != null)
            {
                <img class="image w-100 rounded-top" src="@Url.Content($"~{Model.ImageAddress}")" alt="Изображение" />
            }
            else
            {
                <img class="image w-100 rounded-top" src="@Url.Content($"~/images/MissingImage.png")" alt="Изображение" />
            }
        </picture>
    </a>

    <div class="card-body text-white text-center d-md-block">
        <p class="">@Model.Title</p>
        <p class="mt-1">@Model.Author</p>
    </div>
</div>

